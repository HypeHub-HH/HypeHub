{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      },
      "Using": [ "Serilog.Sinks.MSSqlServer" ]
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          //"connectionString": "Server=tcp:hypehub-databases-server.database.windows.net,1433;Initial Catalog=HypeHubSerilog;Persist Security Info=False;User ID=hypebeast;Password=codecoolmikimario98#;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
          "tableName": "Logs",
          "autoCreateSqlDatabase": false,
          "autoCreateSqlTable": true
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "JWT": {
    "ValidIssuer": "apiWithAuthBackend",
    "ValidAudience": "apiWithAuthBackend",
    "TokenValidityInMinutes": 15,
    "RefreshTokenValidityInDays": 7
  },
  "AzureKeyVault": {
    "VaultUri": "https://hypehubkeys.vault.azure.net/"
  }
}
